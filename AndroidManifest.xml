<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yyc.androiddemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.yyc.androiddemo.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.yyc.androiddemo.activity.PersonListActivity"></activity>
        <activity android:name="com.yyc.androiddemo.activity.LocationListActivity"></activity>
        <activity android:name="com.yyc.androiddemo.activity.BasicAnimationActivity"></activity>
    	<activity android:name="com.yyc.androiddemo.activity.StopWatchActivity"></activity>
    	<activity android:name="com.yyc.androiddemo.activity.MusicPlayerActivity"></activity>
    	
    	<service android:name="com.yyc.androiddemo.service.PlayMusicService"></service>
    </application>

</manifest>
